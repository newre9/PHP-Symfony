
{% extends 'Adminbase.html.twig' %}
{% block title %}Shoping Admin Panel{% endblock %}
{% block content %}
    <!-- MAIN CONTENT-->

    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-30">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Product Listesi  </strong>
                                {{ include('flash.html.twig') }}
                            </div>
    <h1>Orders</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ order.userid }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ order.amount }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ order.name }}</td>
            </tr>
            <tr>
                <th>Adres</th>
                <td>{{ order.adres }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ order.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ order.phone }}</td>
            </tr>
            <form action="{{ path('admin_orders_update',{'id': order.id}) }}" method="post">
                <tr>
                    <th>shipinfo</th>
                    <td><textarea name="shipinfo" cols="100" rows="3">{{ order.shipinfo }}</textarea></td>
                </tr>
                <tr>
                    <th>Admin Note</th>
                    <td><textarea name="note" cols="100" rows="3">{{ order.note }}</textarea></td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td><select name="status">
                            <option>{{ order.status }}</option>
                            <option>Accepted</option>
                            <option>InShiping</option>
                            <option>Canceled</option>
                            <option>Completed</option>
                        </select>
                        <input type="submit" value="Güncelle">
                    </td></tr></form>

        </tbody>
    </table>
<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Product Name</th>
        <th>Sale Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th>Status</th>
    </tr>
    </thead>

    {% set total=0 %}
    {% for rs in orderdetail %}
    <tr>
        <td>{{ rs.id }}</td>
        <td>{{ rs.name }}</td>
        <td>{{ rs.price }}</td>
        <td>{{ rs.quantity }}</td>
        <td>{{ rs.amount }}</td>
        <td>{{ rs.status }}</td>
<tr>
        {% else %}
        <tr><td colspan="5">Toplam Alışveriş Tutarı: {{ order.amount }} TL<br></td>

    </tr>
    {% endfor %}
</tbody>
</table>
    <a href="{{ path('orders_index') }}">back to list</a>

    <a href="{{ path('orders_edit', {'id': order.id}) }}">edit</a>

    {{ include('orders/_delete_form.html.twig') }}
    </div>
    </div>
    </div>
    </div>
    </div>
    </div>


    <!-- END PAGE CONTAINER-->
{% endblock %}

