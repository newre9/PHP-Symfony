{% extends 'frontbase.html.twig' %}

{% block title %}{{ data[0].title }}  {% endblock %}
{% block keywords %}{{ data[0].keywords }}  {% endblock %}
{% block description%}{{ data[0].description}}  {% endblock %}
{% block sidebar %}{% include( 'home/sidebar.html.twig') %}{% endblock %}
{% block content   %}
<table>
    <<div class="w3l_banner_nav_right">

        <div class="agileinfo_single">
            <h5>{{ data[0].title }} </h5>
            <div class="col-md-4 agileinfo_single_left">
                <div id="myCarousel" class="carousel slide cntr">
                    <div class="carousel-inner">
                                        <div class="item active">
                                            <a href="#"> <img src="{{ asset('uploads') }}/images/{{ data[0].image }}" alt="" style="width:100%"></a>
                                        </div>
                                        {% for rs in image %}
                                            <div class="item ">
                                                <a href="#"> <img src="{{ asset('uploads') }}/images/{{ rs.image }}" alt="" style="width:100%"></a>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
                                    <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
                                </div>
                            </div>
                            <div class="span7">
                                <h3>{{ data[0].description }}</h3>
                                <hr class="soft"/>

                                <form name="shopcart" action="{{ path('shopcart_new') }}" class="form-horizontal qtyFrm" method="post">
                                    <div class="control-group">
                                        <label class="control-label"><span>fiyat :{{ data[0].sprice }} TL</span></label> <br>

                                        <label class="control-label"><span>kaç adet</span></label>
                                        <input type="number" name="shopcart[quantity]" class="span6" value="1" placeholder="adet" max="{{ data[0].amount }}">
                                        <input type="hidden" name="shopcart[productid]" value="{{ data[0].id  }}" >
                                    </div>
                                    <h4>{{ data[0].amount }} adet stokta var </h4>
                                    <p>{{ data[0].description }}</p>
                                    <input type="hidden" name="token" value="{{ csrf_token('add-item') }}"/>
                                    <button type="submit" class="shopBtn"><span class=" icon-shopping-cart"></span> Add to cart</button>
                                </form>
                                <div class="w3agile_description">
                                    <h4>DETAY :</h4>
                                    <p>{{ data[0].detail|raw}}.</p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>

    </div>

    </div>
    <!-- //about -->
    </div>
    <div class="clearfix">

    </div>
</table>
{% endblock %}
