{% extends 'frontbase.html.twig' %}

{% block title %}Shopcart Order Items  {% endblock %}

{% block sidebar %}{% include( 'home/usersidebar.html.twig') %}{% endblock %}
{% block content   %}
<div class="w3l_banner_nav_right">
    <!-- about -->
    <div class="privacy about">
    <h1>Spariş Detay</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ order.userid }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ order.amount }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ order.name }}</td>
            </tr>
            <tr>
                <th>Adres</th>
                <td>{{ order.adres }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ order.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ order.phone }}</td>
            </tr>



        </tbody>
    </table>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Sale Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Status</th>
            </tr>
            </thead>

            {% set total=0 %}
            {% for rs in orderdetail %}
                <tr>
                    <td>{{ rs.id }}</td>
                    <td>{{ rs.name }}</td>
                    <td>{{ rs.price }}</td>
                    <td>{{ rs.quantity }}</td>
                    <td>{{ rs.amount }}</td>
                    <td>{{ rs.status }}</td>
                <tr>
            {% else %}
                <tr><td colspan="5">Toplam Alışveriş Tutarı: {{ order.amount }} TL<br></td>

                </tr>
            {% endfor %}
            </tbody>
        </table>






    </div>
    <!-- //about -->
</div>
    <div class="clearfix"></div>
    </div>
    <!-- //banner -->
    <!-- team -->

{% endblock %}

